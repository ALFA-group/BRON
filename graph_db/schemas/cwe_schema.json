{
    "$schema":"http://json-schema.org/draft-07/schema#",
    "title":"cwe",
    "description":"A weakness from MITRE CWE",
    "type":"object",
    "properties":{
       "_key":{
          "description":"The unique identifier for BRON. E.g. 'cwe_01127'",
          "type":"string",
          "pattern": "cwe_\\d{5}"
       },
       "original_id":{
        "description":"ID from MITRE CWE. E.g. '1004'",
        "type":"string",
        "pattern": "\\d"
       },
       "datatype":{
        "description":"Name of datasource",
        "type":"string", 
        "pattern": "cwe"
       },
       "name":{
        "description":"The name of the weakness. TODO write pattern",
        "type":"string"
       },
       "metadata":{
        "description":"Metadata",
        "type":"object",
        "properties": {
            "description": {
                "description": "The extended description",
                "type": ["string", "null"]
            },
            "short_description": {
                "description": "The description",
                "type": "string"
            },
            "likelihood_of_exploit": {
                "description": "The likelihood of exploit. TODO get the patterns",
                "type": "string"
            },
            "common_consequences": {
                "description": "The common consequences. TODO get the patterns",
                "type": "array",
                "items": {
                    "properties": {
                        "Scope": {
                            "description": "",
                            "type": "string"
                        },
                        "Impact": {
                            "description": "",
                            "type": "string"
                        },
                        "Likelihood": {
                            "description": "",
                            "type": "string"
                        },
                        "Note": {
                            "description": "",
                            "type": "string"
                        }
                    },
                    "required": ["Scope"]
                }
            },
            "applicable_platforms": {
                "description": "The applicable platforms. TODO get the patterns",
                "type": "array",
                "items": {
                    "type": "string"
                }
            }            
            },
            "required":[
                "description",
                "short_description"
             ]
       }
    },
    "required":[
        "_key",
        "name",
        "metadata",
        "datatype",
        "original_id"
     ]
  }