{
    "$schema":"http://json-schema.org/draft-07/schema#",
    "title":"campaign",
    "description":"A campaign in ATT&CK.",
    "type":"object",
    "properties":{
       "_key":{
          "description":"The unique identifier for BRON. From data source",
          "type":"string",
          "pattern": "C\\d{4}"
       },
       "original_id":{
        "description":"ID from MITRE ATT&CK. E.g. 'C1013'",
        "type":"string",
        "pattern": "C\\d{4}"
       },
       "datatype":{
        "description":"Name of datasource",
        "type":"string", 
        "pattern": "campaign"
       },
       "name":{
        "description":"The name of the campaign. TODO write pattern",
        "type":"string",
        "minLength": 1
       },
       "metadata":{
        "description":"Metadata",
        "type":"object",
        "properties": {
            "description": {
                "description": "The full description",
                "type": "string",
                "minLength": 1
            }
            },
            "required":[
                "description"
             ]         
       }

    },
    "required":[
        "_key",
        "name",
	"metadata",
        "datatype",
        "original_id"
     ]
  }